<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.daw2.app">
<class name="Game" table="games">
<id name="id" type="integer" column="id" />
<property name="title" type="string" column="title" />
<property name="release_date" type="date" column="release_date" />
<property name="publisher" type="string" column="publisher" />
<property name="system" type="string" column="system" />
<property name="rating" type="integer" column="rating" />
<property name="num_players" type="integer" column="num_players" />

</class>
</hibernate-mapping>