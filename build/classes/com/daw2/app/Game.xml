<?xml version="1.0"?>
<hibernate-mapping package="com.daw2.app">
<class name="Game" table="games">
<id name="id" type="int" />
<property name="title" type="string" column="title" />
<property name="release_date" type="date" column="release_date" />
<property name="publisher" type="string" column="publisher" />
<property name="system" type="string" column="system" />
<property name="rating" type="int" column="rating" />
<property name="num_players" type="int" column="num_players" />

</class>
</hibernate-mapping>